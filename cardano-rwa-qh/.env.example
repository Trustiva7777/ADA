# ============================================================================
# Cardano RWA Platform - Environment Configuration Template
# ============================================================================
# Copy this file to .env and configure for your environment
# IMPORTANT: Never commit .env with real credentials to version control
# ============================================================================

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
# Which Cardano network to use: preview, preprod, mainnet
NETWORK=preview

# ============================================================================
# BLOCKFROST API CONFIGURATION
# ============================================================================
# Get your free API key from https://blockfrost.io
# Leave blank to use local Ogmios/Kupo infrastructure instead
BLOCKFROST_API_KEY=

# Blockfrost API project ID (if using Blockfrost)
BLOCKFROST_PROJECT_ID=

# ============================================================================
# LOCAL CARDANO INFRASTRUCTURE (Alternative to Blockfrost)
# ============================================================================
# Use these if you have local Ogmios/Kupo running via Docker Compose
# Format: wss://host:port or https://host:port

# Ogmios WebSocket endpoint for transaction building
OGMIOS_URL=ws://localhost:1337

# Kupo HTTP endpoint for UTxO queries
KUPO_URL=http://localhost:1442

# Cardano Submit API endpoint for submitting transactions
SUBMIT_API_URL=http://localhost:8090

# ============================================================================
# IPFS CONFIGURATION
# ============================================================================
# IPFS node URL for pinning proof bundles and evidence
IPFS_NODE_URL=https://ipfs.io

# Your IPFS API endpoint (if using local IPFS node)
# IPFS_API_URL=http://localhost:5001

# IPFS gateway URL for accessing pinned files
IPFS_GATEWAY_URL=https://gateway.pinata.cloud

# ============================================================================
# WALLET CONFIGURATION (TEST ONLY - Use hardware wallet for production)
# ============================================================================
# 24-word mnemonic seed phrase (NEVER commit to version control)
ISSUER_SEED=

# Or raw private key (NEVER commit to version control)
ISSUER_SK=

# ============================================================================
# ASSET CONFIGURATION
# ============================================================================
# QH-R1 Royalty Token configuration

# Token name
TOKEN_NAME=QuebradaHonda-Royalty-Phase1

# Token ticker symbol
TOKEN_TICKER=QH-R1

# Total supply (in smallest units, e.g., 1M tokens = 1000000 if decimals=0)
TOKEN_SUPPLY=1000000

# Number of decimal places
TOKEN_DECIMALS=2

# Policy description for CIP-25 metadata
TOKEN_POLICY_DESCRIPTION=Quebrada Honda Mining Royalty Token

# ============================================================================
# POLICY LOCK CONFIGURATION
# ============================================================================
# Time to lock the minting policy (slot number)
# Leave blank to use current slot + 45 days
POLICY_LOCK_SLOT=

# ============================================================================
# ALLOWLIST CONFIGURATION
# ============================================================================
# Path to KYC allowlist file (CSV or JSON)
ALLOWLIST_FILE_PATH=./docs/allowlist.csv

# Whether to require allowlist for minting
REQUIRE_ALLOWLIST=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Grafana admin password
GRAFANA_PASSWORD=admin

# Enable performance monitoring
ENABLE_MONITORING=true
OGMIOS_URL=
KUPO_URL=

# Optional: submit API (if you prefer POSTing signed tx)
SUBMIT_API_URL=

# Compliance API (Unykorn Gateway)
COMPLIANCE_URL=https://YOUR_COMPLIANCE/api/verify
COMPLIANCE_TOKEN=

# Dev mock compliance (optional)
MOCK_COMPLIANCE_PORT=8787
MOCK_SERIES=QH-R1
MOCK_DENYLIST=
