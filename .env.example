# Environment variables for local development
# Copy this file to .env.local and adjust values as needed
# SECURITY WARNING: Never commit actual secrets to version control

# === Database Configuration ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sampledb
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_CONNECTION_STRING=Host=db;Port=5432;Database=sampledb;Username=postgres;Password=postgres

# === IPFS Configuration ===
IPFS_API=http://ipfs:5001
IPFS_GATEWAY=http://ipfs:8080

# === Cardano Configuration ===
CARDANO_NETWORK=preview
CARDANO_OGMIOS=http://ogmios:1337
CARDANO_KUPO=http://kupo:1442

# === Application Configuration ===
ASPNETCORE_ENVIRONMENT=Development
WEATHER_URL=http://backend:8080

# === Monitoring Configuration ===
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000

# === Service Endpoints ===
BACKEND_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8081
IPFS_HTTP_GATEWAY=http://localhost:8080
OGMIOS_API=http://localhost:1337

